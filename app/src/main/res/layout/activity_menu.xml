<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/lcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:weightSum="10.5">

        <androidx.appcompat.widget.Toolbar

            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/quotee"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"></androidx.appcompat.widget.Toolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"></View>
        <TextView
            android:fontFamily="@font/raleway"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="#000000"
            android:text="   Subjects   "
            android:textColor="#FFF"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.25"
            android:weightSum="4.8">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"></View>

            <Button

                android:textAllCaps="false"
                android:text="Maths"
                android:gravity="bottom|center"
                android:paddingBottom="7dp"
                android:id="@+id/maths"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@drawable/maths"
                android:fontFamily="@font/raleway"
                android:textSize="15sp" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.18"></View>
            <Button
                android:textAllCaps="false"
                android:fontFamily="@font/raleway"
                android:text="Physics"
                android:gravity="bottom|center"
                android:paddingBottom="7dp"
                android:id="@+id/phy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@drawable/physics"
                android:textSize="15sp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.18"
                ></View>
            <Button
                android:textAllCaps="false"
                android:fontFamily="@font/raleway"
                android:text="Chemistry"
                android:gravity="bottom|center"
                android:paddingBottom="7dp"
                android:id="@+id/chem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:textSize="15sp"
                android:background="@drawable/chemistry"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.18"></View>
            <Button
                android:textAllCaps="false"
                android:text="English"
                android:gravity="bottom|center"
                android:paddingBottom="7dp"
                android:fontFamily="@font/raleway"
                android:id="@+id/eng"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@drawable/english"
                android:textSize="15sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.18"></View>
        <TextView
            android:fontFamily="@font/raleway"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="#000000"
            android:text="   Instructions   "
            android:textColor="#FFF"
            android:textSize="20sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:weightSum="4.8"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"></View>
            <Button
                android:textAllCaps="false"
                android:fontFamily="@font/raleway"
                android:id="@+id/phelp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Paper Help"
                android:background="#FFF"
                android:textSize="17sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"></View>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:weightSum="3">
            <TextView
                android:fontFamily="@font/raleway"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:text=" Support me"
                android:textColor="#FFF"
                android:textSize="20sp" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.76"></View>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:weightSum="4.8"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"></View>
            <Button
                android:textAllCaps="false"
                android:fontFamily="@font/raleway"
                android:id="@+id/support"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Help me!"
                android:background="#FFF"
                android:textSize="17sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"></View>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"></View>




    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"

        app:menu="@menu/menuu">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>